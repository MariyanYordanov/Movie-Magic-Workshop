{{#if errors}}
    <p class="error-container">All field are required!</p>
{{/if}}

<section id="create-cast">
    <div class="createCastSection">
        <div class="info-cast">
            <h2>"You're gonna need a bigger boat." â€” "Jaws," 1975.</h2>
        </div>

        <form method="post" class="createCastForm">
            <h2>Add Cast</h2>
            <ul class="noBullet">
                <li {{#if error.name}}class="error"{{/if}}>
                    <label for="name">Name:</label>
                    <input type="text" class="inputFields" id="name" name="name" value="{{cast.name}}" />
                </li>
                <li {{#if error.age}}class="error"{{/if}}>
                    <label for="age">Age:</label>
                    <input type="number" class="inputFields" id="age" name="age" value="{{cast.age}}" />
                </li>
                <li {{#if error.born}}class="error"{{/if}}>
                    <label for="born">Born:</label>
                    <input type="text" class="inputFields" id="born" name="born" value="{{cast.born}}" />
                </li>
                <li {{#if error.nameInMovie}}class="error"{{/if}}>
                    <label for="name-in-movie">Name in Movie:</label>
                    <input type="text" class="inputFields" id="name-in-movie" name="nameInMovie" value="{{cast.nameInMovie}}" />
                </li>
                <li {{#if error.imageURL}}class="error"{{/if}}>
                    <label for="image">Cast Image:</label>
                    <input type="text" class="inputFields" id="image" name="imageURL" value="{{cast.imageURL}}" />
                </li>
                <li id="center-btn">
                    <button id="create-btn">Add Cast</button>
                </li>
            </ul>
        </form>

    </div>
</section>