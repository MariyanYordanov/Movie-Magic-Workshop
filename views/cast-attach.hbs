{{#if error}}
<div class="error-container">
    <p>Select cast members from the drop list, pleace!</p>
</div>
{{/if}}
<section id="attachCast">
    <div class="attachCastSection">
        <h1>Attach New Cast</h1>
        <div class="attach-form">
            <h2>{{movie.title}}</h2>
            <img class="movie" src="{{movie.imageURL}}">
            <form method="POST" {{#if error}}class="error"{{/if}}>
                <label for="cast">Cast</label>
                <select id="cast" name="cast" >
                    <option value="none" selected>--------</option>
                    {{#each allCasts}}
                    <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
                <div id="center-btn">
                    <button id="create-btn">Add Cast</button>
                </div>
            </form>
        </div>
    </div>
</section>