
<div class="flip flip-vertical">
    <div class="front">
        <img src="{{movie.imageURL}}" alt="{{movie.title}}">
    </div>
    <div class="back">
        <h1>{{movie.title}}</h1>
        <h2>Genre: {{movie.genre}}</h2>
        <p>Description: {{movie.description}}</p>
        <a href="/details/{{movie.id}}" class="details">Details</a>
    </div>
</div>